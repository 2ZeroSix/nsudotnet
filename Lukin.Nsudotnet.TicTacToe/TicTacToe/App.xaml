<Application x:Class="TicTacToe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TicTacToe">
    <Application.Resources>        
        <ResourceDictionary>
            <ControlTemplate TargetType="Button" x:Key="BtTemplate">
                <Border CornerRadius="25" BorderBrush="SaddleBrown" BorderThickness="2"
                        Background="SandyBrown" Height="40" Width="100" >
                    <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}" />
                </Border>
            </ControlTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:AppBootstrapper x:Key="Bootstrapper">
                    </local:AppBootstrapper>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
    </Application.Resources>
</Application>
